<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:id="@+id/statisticsLayout"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/title_border"
            >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/back"
                android:paddingTop="24sp"
                android:paddingLeft="10sp"/>
            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="@string/accountSettingsTitle"
                android:fontFamily="@font/poppinsbold"
                android:textSize="16sp"
                android:paddingStart="10sp"
                android:paddingEnd="0dp"
                android:paddingVertical="15sp"
                android:textColor="@color/black"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:layout_marginTop="20dp"
            android:orientation="horizontal"
            android:paddingHorizontal="20sp">

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:elevation="0dp"
                app:cardCornerRadius="70dp"
                android:layout_marginEnd="20dp">


                <ImageView
                    android:id="@+id/driverAvatarSettings"
                    android:layout_width="110dp"
                    android:layout_height="110dp"
                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/profile_pic" />

                <ImageView
                    android:id="@+id/edit_profile_picture_button"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginEnd="4dp"
                    android:layout_marginBottom="4dp"
                    android:background="@drawable/edit_pic"
                    android:padding="8dp"
                    android:src="@drawable/edit"
                    app:layout_constraintBottoom_toBottomof="@id/driverAvatarSettings"
                    app:layout_constraintEnd_toEndOf="@id/driverAvatarSettings"
                    android:layout_marginTop="85dp"
                    android:layout_marginStart="20dp"
                    app:tint="@color/black" />
            </androidx.cardview.widget.CardView>



            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <EditText
                    android:id="@+id/editTextNameSettings"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginStart="0dp"
                    android:inputType="textPersonName"
                    android:text="@string/inputName"
                    android:padding="10sp"
                    android:background="@drawable/border"
                    android:fontFamily="@font/poppinsbold"
                    android:textSize="16sp"/>


                <EditText
                    android:id="@+id/editTextSurnameSettings"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_marginTop="15dp"
                    android:inputType="textPersonName"
                    android:text="@string/inputSurname"
                    android:padding="10sp"
                    android:background="@drawable/border"
                    android:fontFamily="@font/poppinsbold"
                    android:textSize="16sp" />
            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginHorizontal="30dp">

            <EditText
                android:id="@+id/editTextEmailSettings"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp"
                android:background="@drawable/border"
                android:fontFamily="@font/poppinsbold"
                android:text="@string/inputEmail"
                android:inputType="textEmailAddress"
                android:padding="10sp"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/editTextCitySettings"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp"
                android:background="@drawable/border"
                android:fontFamily="@font/poppinsbold"
                android:text="@string/inputCity"
                android:inputType="text"
                android:padding="10sp"
                android:textSize="16sp" />

            <LinearLayout
                android:id="@+id/telephoneLayoutSettings"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"

                android:orientation="horizontal"
                android:layout_marginTop="20dp"

                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <Spinner
                    android:id="@+id/spinnerAreaNumSettings"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:fontFamily="@font/poppinsbold"
                    android:background="@drawable/border"
                    android:backgroundTint="#D9D9D9"
                    android:paddingHorizontal="10sp"
                    />

                <EditText
                    android:id="@+id/editTextPhoneSettings"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:background="@drawable/border"
                    android:layout_marginStart="40dp"
                    android:fontFamily="@font/poppinsbold"
                    android:hint="@string/inputPhone"
                    android:padding="10sp"
                    android:textSize="16sp" />
                />

            </LinearLayout>

            <EditText
                android:id="@+id/editTextCCardSettings"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp"
                android:background="@drawable/border"
                android:fontFamily="@font/poppinsbold"
                android:text="@string/inputCCard"
                android:inputType="text"
                android:padding="10sp"
                android:textSize="16sp" />

            <!--<Button
                android:id="@+id/changePasswordBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="30dp"
                android:text="@string/changePassword"
                android:backgroundTint="@color/gray"
                android:fontFamily="@font/poppinsbold"
                android:textSize="14sp"
                android:textAllCaps="false"
                android:drawableLeft="@drawable/settings"
                android:textColor="@color/black"
                />-->

            <!--<Button
                android:id="@+id/changePaymentInfoBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"

                android:text="@string/changePaymentInfo"
                android:backgroundTint="@color/gray"
                android:fontFamily="@font/poppinsbold"
                android:textSize="14sp"
                android:textAllCaps="false"
                android:drawableLeft="@drawable/settings"
                android:textColor="@color/black"
                />-->

            <com.google.android.material.button.MaterialButton
                android:id="@+id/changePasswordBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/editTextCCardSettings"
                android:backgroundTint="@color/gray"
                android:text="@string/changePassword"
                android:textColor="@color/black"
                android:fontFamily="@font/poppinsbold"
                android:textFontWeight="700"
                android:textAllCaps="false"
                android:layout_marginTop="30dp"
                android:textSize="16sp"
                android:paddingVertical="7dp"
                app:cornerRadius="10dp"
                app:icon="@drawable/key"
                app:iconGravity="textStart"
                app:iconSize="25dp"
                app:iconTint="@color/blue"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/changePayInfoBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/changePasswordBtn"
                android:backgroundTint="@color/gray"
                android:text="@string/changePaymentInfo"
                android:textColor="@color/black"
                android:fontFamily="@font/poppinsbold"
                android:textFontWeight="700"
                android:textAllCaps="false"
                android:layout_marginTop="5dp"
                android:textSize="16sp"
                android:paddingVertical="7dp"
                app:cornerRadius="10dp"
                app:icon="@drawable/ccard"
                app:iconGravity="textStart"
                app:iconSize="25dp"
                app:iconTint="@color/blue"/>


        </LinearLayout>

        <androidx.appcompat.widget.AppCompatButton
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:backgroundTint="@color/solid_blue"
            android:background="@drawable/button"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="15dp"
            android:paddingHorizontal="25sp"
            android:paddingVertical="5sp"
            android:text="@string/save"
            android:textAllCaps="false"
            android:fontFamily="@font/poppinsbold"
            android:textSize="16sp"
            android:textColor="@color/white"/>



    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>