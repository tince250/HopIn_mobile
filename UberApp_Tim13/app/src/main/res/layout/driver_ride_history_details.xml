<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingHorizontal="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/border"
        android:orientation="vertical"
        android:paddingStart="5dp"
        android:paddingTop="10dp"
        android:paddingEnd="5dp"
        android:paddingBottom="10dp">

<!--        prvi pravougaonik-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/icon_car"
                android:layout_width="50dp"
                android:layout_height="40dp"
                android:layout_gravity="center_vertical"
                android:layout_marginEnd="5dp"
                android:contentDescription="@null"
                android:src="@drawable/ic_car"
                app:tint="@color/dark_gray" />

            <LinearLayout
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="0dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textViewRoute"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppinsbold"
                    android:gravity="center_vertical"
                    android:paddingTop="5dp"
                    android:text="Novi Sad -> Belgrade"
                    android:textColor="@color/dark_blue"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    />

                <TextView
                    android:id="@+id/textViewStops"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppinsbold"
                    android:text="stops: Stara Pazova"
                    android:textSize="14sp"
                    android:layout_marginTop="-2dp"
                    android:textColor="@color/dark_gray"
                    android:textStyle="bold"/>
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/textViewStartTime"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/poppinsbold"
            android:text="@string/rideDate"
            android:textColor="@color/dark_blue"
            android:textSize="15sp"
            android:drawableLeft="@drawable/ic_calendar"
            android:drawablePadding="3dp"
            android:paddingHorizontal="8dp"/>


        <TextView
            android:id="@+id/textViewEndTime"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/poppinsbold"
            android:text="@string/rideDate"
            android:drawableLeft="@drawable/ic_calendar"
            android:drawablePadding="3dp"
            android:paddingHorizontal="8dp"
            android:textColor="@color/dark_blue"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/textViewDistance"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/poppinsbold"
            android:text="@string/acceptanceRideDistance"
            android:textColor="@color/dark_blue"
            android:textSize="15sp"
            android:drawableLeft="@drawable/ic_price"
            android:drawablePadding="3dp"
            android:paddingHorizontal="8dp"/>


        <TextView
            android:id="@+id/textViewPassengers"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/poppinsbold"
            android:text="@string/acceptanceRidePassengers"
            android:drawableLeft="@drawable/ic_passenger"
            android:drawablePadding="3dp"
            android:paddingHorizontal="8dp"
            android:textColor="@color/dark_blue"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/textViewPrice"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/poppinsbold"
            android:text="@string/acceptanceRidePrice"
            android:textColor="@color/dark_blue"
            android:textSize="15sp"
            android:drawableLeft="@drawable/ic_price"
            android:drawablePadding="3dp"
            android:paddingHorizontal="8dp"/>

        <androidx.cardview.widget.CardView

            android:id="@+id/mapAcceptanceRoute"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="12dp"
            android:layout_margin="10dp"
            android:elevation="10dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/acceptance_route"
                android:adjustViewBounds="true"/>

        </androidx.cardview.widget.CardView>

    </LinearLayout>


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="10dp"
        app:cardCornerRadius="5dp"
        android:elevation="0dp"
        android:id="@+id/driver_info_card_hist">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/content_driver"
            >
            <View
                android:layout_width="10dp"
                android:layout_height="match_parent"
                android:background="@color/orange" />

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_marginBottom="5dp"
                android:padding="10dp"
                android:id="@+id/driverDetails"
                >
                <androidx.cardview.widget.CardView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    app:cardCornerRadius="25dp"
                    android:id="@+id/imageCardDriver"
                    android:layout_marginRight="10dp"
                    android:layout_centerVertical="true"
                    android:elevation="0dp"
                    >
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        android:src="@drawable/wheel"/>
                </androidx.cardview.widget.CardView>



                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/name_driver"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="20dp"
                    android:layout_toEndOf="@id/imageCardDriver"
                    android:textSize="14sp"
                    android:textColor="@color/black"
                    android:fontFamily="@font/poppinsbold"
                    android:textFontWeight="700"
                    android:text="Driver: Mark Johnson"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/displayMessageDriver"
                    android:layout_marginRight="20dp"
                    android:layout_below="@id/name_driver"
                    android:layout_toEndOf="@id/imageCardDriver"
                    android:fontFamily="@font/poppinsbold"
                    android:textSize="11sp"
                    android:textColor="@color/dark_gray"
                    android:text="Show details"
                    android:textStyle="bold"/>

            </RelativeLayout>
        </LinearLayout>



    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="10dp"
        app:cardCornerRadius="5dp"
        android:elevation="0dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/content"
            >
            <View
                android:id="@+id/colored_margin"
                android:layout_width="10dp"
                android:layout_height="match_parent"
                android:background="@color/orange" />

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_marginBottom="5dp"
                android:padding="10dp"
                android:onClick="switchToPassengerDetails"
                android:id="@+id/passengerDetails"
                >
                <androidx.cardview.widget.CardView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    app:cardCornerRadius="25dp"
                    android:id="@+id/imageCard"
                    android:layout_marginRight="10dp"
                    android:layout_centerVertical="true"
                    android:elevation="0dp"
                    >
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/inboxImage"
                        android:scaleType="centerCrop"
                        android:src="@drawable/ic_passenger"/>
                </androidx.cardview.widget.CardView>



                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/name"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="20dp"
                    android:layout_toEndOf="@id/imageCard"
                    android:textSize="14sp"
                    android:textColor="@color/black"
                    android:fontFamily="@font/poppinsbold"
                    android:textFontWeight="700"
                    android:text="Passengers"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/displayMessage"
                    android:layout_marginRight="20dp"
                    android:layout_below="@id/name"
                    android:layout_toEndOf="@id/imageCard"
                    android:fontFamily="@font/poppinsbold"
                    android:textSize="11sp"
                    android:textColor="@color/dark_gray"
                    android:text="Show details"
                    android:textStyle="bold"/>

            </RelativeLayout>
        </LinearLayout>



    </androidx.cardview.widget.CardView>


    <RelativeLayout
        android:id="@+id/commentsSection"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/border"
        android:orientation="vertical"
        android:paddingHorizontal="5dp"
        android:paddingVertical="10dp">

        <TextView
            android:id="@+id/commentsSectionTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/poppinsbold"
            android:text="Ratings"
            android:textColor="@color/black"
            android:padding="5dp"
            android:layout_marginLeft="15dp"
            android:textSize="16sp"
            android:textStyle="bold"/>

        <RatingBar
            android:id="@+id/ratingBar"
            style="?android:attr/ratingBarStyleIndicator"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:isIndicator="true"
            android:numStars="5"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:progressBackgroundTint="@color/black"
            android:progressTint="@color/orange"
            android:rating="4"
            android:scaleX="0.6"
            android:scaleY="0.6"
            android:layout_marginRight="-25dp"/>

        <FrameLayout
            android:id="@+id/listViewReviews"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/ratingBar">

        </FrameLayout>






    </RelativeLayout>

</LinearLayout>