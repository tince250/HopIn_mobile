<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView android:layout_width="380dp"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="center"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:elevation="0dp"
    app:cardCornerRadius="5dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="15dp">

        <TextView
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:fontFamily="@font/poppinsbold"
            android:text="@string/driverDetailsTitle"
            android:textColor="@color/dark_blue"
            android:textSize="18sp"
            android:gravity="center"
            android:textFontWeight="700" />

        <com.google.android.material.card.MaterialCardView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="10dp"
            android:background="@drawable/border"
            android:gravity="center"
            app:cardCornerRadius="5dp"
            app:strokeColor="@color/gray"
            app:strokeWidth="1dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingVertical="10dp"
                android:paddingHorizontal="10dp">

                <androidx.cardview.widget.CardView
                    android:id="@+id/ic_profile_card"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:elevation="0dp"
                    app:cardCornerRadius="50dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginHorizontal="3dp">


                    <ImageView
                        android:id="@+id/ic_profile"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_gravity="center_horizontal"
                        android:scaleType="centerCrop"
                        android:src="@drawable/profile_placeholder" />
                </androidx.cardview.widget.CardView>



                <TextView
                    android:id="@+id/detailsNameTV"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppinsbold"
                    android:layout_toEndOf="@id/ic_profile_card"
                    android:textColor="@color/dark_blue"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:drawablePadding="3dp"
                    android:paddingHorizontal="8dp" />


                <TextView
                    android:id="@+id/detailsEmailTV"
                    android:layout_below="@id/detailsNameTV"
                    android:layout_toEndOf="@id/ic_profile_card"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppinsbold"
                    android:drawablePadding="3dp"
                    android:paddingHorizontal="8dp"
                    android:textColor="@color/dark_blue"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/detailsContactTV"
                    android:layout_below="@id/detailsEmailTV"
                    android:layout_toEndOf="@id/ic_profile_card"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/poppinsbold"
                    android:drawablePadding="3dp"
                    android:paddingHorizontal="8dp"
                    android:textColor="@color/dark_blue"
                    android:textSize="15sp" />


            </RelativeLayout>


        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="10dp"
            android:background="@drawable/border"
            android:gravity="center"
            app:cardCornerRadius="5dp"
            app:strokeColor="@color/gray"
            app:strokeWidth="1dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingVertical="10dp"
                android:paddingHorizontal="10dp">

                <ImageView
                    android:id="@+id/ic_car"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center_horizontal"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ic_car"
                    app:tint="@color/dark_gray"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="5dp"
                    android:layout_marginLeft="3dp"/>

                <TextView
                    android:id="@+id/detailsPlatesTV"
                    android:layout_toEndOf="@id/ic_car"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppinsbold"
                    android:drawablePadding="3dp"
                    android:paddingHorizontal="8dp"
                    android:textColor="@color/dark_blue"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/detailsVehicleTV"
                    android:layout_below="@id/detailsPlatesTV"
                    android:layout_toEndOf="@id/ic_car"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/poppinsbold"
                    android:drawablePadding="3dp"
                    android:paddingHorizontal="8dp"
                    android:textColor="@color/dark_blue"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/vehicleTypeTV"
                    android:layout_below="@id/detailsVehicleTV"
                    android:layout_toEndOf="@id/ic_car"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/poppinsbold"
                    android:drawablePadding="3dp"
                    android:paddingHorizontal="8dp"
                    android:textColor="@color/dark_blue"
                    android:textSize="15sp" />
            </RelativeLayout>
        </com.google.android.material.card.MaterialCardView>

    </LinearLayout>


</androidx.cardview.widget.CardView>