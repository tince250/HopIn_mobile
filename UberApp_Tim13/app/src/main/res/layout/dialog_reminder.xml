<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/acceptedRidePU"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:layout_marginHorizontal="20dp"
    android:layout_marginVertical="20dp"

    app:cardCornerRadius="10dp"
    android:background="@drawable/border">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        >
        <TextView
            android:id="@+id/titleTV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="1dp"
            android:layout_marginTop="15dp"
            android:gravity="center"
            android:fontFamily="@font/poppinsbold"
            android:text="@string/reminder"
            android:textColor="@color/dark_blue"
            android:textFontWeight="700"
            android:textSize="18sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/infoTV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="0dp"
            android:layout_below="@id/titleTV"
            android:gravity="center"
            android:fontFamily="@font/poppinsbold"
            android:text="@string/your_scheduled_ride_starts_soon"
            android:textColor="@color/dark_gray"
            android:textFontWeight="700"
            android:textSize="18sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/rideTV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="0dp"
            android:layout_below="@id/infoTV"
            android:gravity="center"
            android:fontFamily="@font/poppinsbold"
            android:text=""
            android:textColor="@color/dark_blue"
            android:textFontWeight="700"
            android:textSize="18sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/estimatedTimeTV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="0dp"
            android:layout_below="@id/rideTV"
            android:gravity="center"
            android:fontFamily="@font/poppinsbold"
            android:text="@string/estimated_time"
            android:textColor="@color/dark_gray"
            android:textFontWeight="700"
            android:textSize="15sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/dateTV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="0dp"
            android:layout_below="@id/estimatedTimeTV"
            android:gravity="center"
            android:fontFamily="@font/poppinsbold"
            android:text=""
            android:textColor="@color/dark_blue"
            android:textFontWeight="700"
            android:textSize="18sp"
            android:textStyle="bold" />


        <Button
            android:id="@+id/closeBtn"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/dark_blue"
            android:layout_below="@id/dateTV"
            android:paddingVertical="10dp"
            android:text="@string/okay"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textFontWeight="700"
            android:textSize="14sp"
            app:cornerRadius="10dp"
            android:textStyle="bold"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="20dp"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/startBtn"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/green"
            android:layout_below="@id/dateTV"
            android:paddingVertical="10dp"
            android:text="@string/start"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textFontWeight="700"
            android:textSize="14sp"
            app:cornerRadius="10dp"
            android:textStyle="bold"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="20dp"
            android:visibility="gone"/>
    </RelativeLayout>


</androidx.cardview.widget.CardView>