<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="30dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/border_dark"
            android:orientation="vertical"
            android:paddingVertical="20dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:fontFamily="@font/poppinsbold"
                android:text="@string/ride_settings_title"
                android:textColor="@color/blue"
                android:textSize="18sp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/basicCarBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="40dp"
                android:layout_marginTop="20dp"
                android:backgroundTint="@color/white"
                android:fontFamily="@font/poppinsbold"
                android:paddingVertical="7dp"
                android:text="@string/car"
                android:textAllCaps="false"
                android:textColor="@color/lighter_blue"
                android:textFontWeight="700"
                android:textSize="12sp"
                app:icon="@drawable/ic_basic_car"
                app:iconGravity="textTop"
                app:iconSize="30dp"
                app:iconTint="@color/lighter_blue"
                app:strokeColor="@color/lighter_blue"
                app:strokeWidth="2dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/vanBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="40dp"
                android:layout_marginTop="10dp"
                android:backgroundTint="@color/white"
                android:fontFamily="@font/poppinsbold"
                android:paddingVertical="7dp"
                android:text="@string/van"
                android:textAllCaps="false"
                android:textColor="@color/disabled_gray"
                android:textFontWeight="700"
                android:textSize="12sp"
                app:icon="@drawable/ic_van"
                app:iconGravity="textTop"
                app:iconSize="30dp"
                app:iconTint="@color/disabled_gray"
                app:strokeColor="@color/disabled_gray"
                app:strokeWidth="2dp" />


            <com.google.android.material.button.MaterialButton
                android:id="@+id/luxuryCarBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="40dp"
                android:layout_marginTop="10dp"
                android:backgroundTint="@color/white"
                android:fontFamily="@font/poppinsbold"
                android:paddingVertical="7dp"
                android:text="@string/luxury_car"
                android:textAllCaps="false"
                android:textColor="@color/disabled_gray"
                android:textFontWeight="700"
                android:textSize="12sp"
                app:icon="@drawable/ic_luxury"
                app:iconGravity="textTop"
                app:iconSize="30dp"
                app:iconTint="@color/disabled_gray"
                app:strokeColor="@color/disabled_gray"
                app:strokeWidth="2dp" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="40dp"
                android:fontFamily="@font/poppinsbold"
                android:text="@string/special_guests"
                android:textColor="@color/blue"
                android:textSize="18sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/babyBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:backgroundTint="@color/white"
                    android:fontFamily="@font/poppinsbold"
                    android:paddingHorizontal="10dp"
                    android:paddingVertical="7dp"
                    android:text="@string/riding_with_baby"
                    android:textAllCaps="false"
                    android:textColor="@color/disabled_gray"
                    android:textFontWeight="700"
                    android:textSize="12sp"
                    app:icon="@drawable/ic_baby"
                    app:iconGravity="textTop"
                    app:iconSize="30dp"
                    app:iconTint="@color/disabled_gray"
                    app:strokeColor="@color/disabled_gray"
                    app:strokeWidth="2dp" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/petBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:backgroundTint="@color/white"
                    android:fontFamily="@font/poppinsbold"
                    android:paddingVertical="7dp"
                    android:text="@string/riding_with_pet"
                    android:textAllCaps="false"
                    android:textColor="@color/disabled_gray"
                    android:textFontWeight="700"
                    android:textSize="12sp"
                    app:icon="@drawable/ic_dog"
                    app:iconGravity="textTop"
                    app:iconSize="30dp"
                    app:iconTint="@color/disabled_gray"
                    app:strokeColor="@color/disabled_gray"
                    app:strokeWidth="2dp" />

            </LinearLayout>


        </LinearLayout>


        <LinearLayout
            android:id="@+id/start_finish_buttons"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:layout_marginHorizontal="30dp">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/backBtn"
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:backgroundTint="@color/blue"
                android:paddingVertical="10dp"
                android:text="@string/back"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textFontWeight="700"
                android:textSize="16sp"
                app:cornerRadius="10dp" />

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/nextBtn"
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:backgroundTint="@color/blue"
                android:paddingVertical="10dp"
                android:text="@string/next"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textFontWeight="700"
                android:textSize="16sp"
                app:cornerRadius="10dp" />

        </LinearLayout>
    </LinearLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>