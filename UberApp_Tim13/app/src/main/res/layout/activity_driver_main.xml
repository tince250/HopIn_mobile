<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DriverMainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="top"
        android:padding="30dp">

        <TextView
            android:id="@+id/aroundTW"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/aroundYou"
            android:fontFamily="@font/poppinsbold"
            android:textColor="@color/black"
            android:layout_marginLeft="5dp"/>

        <androidx.cardview.widget.CardView
            android:id="@+id/map_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="12dp"
            android:layout_margin="5dp"
            android:elevation="10dp"
            android:layout_below="@id/aroundTW">

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/mapa_mockap"
                android:adjustViewBounds="true"/>
        </androidx.cardview.widget.CardView>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_current_ride"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/map_card"
            android:backgroundTint="@color/green"
            android:text="@string/current_ride"
            android:textColor="@color/white"
            android:textFontWeight="700"
            android:textAllCaps="false"
            android:layout_marginTop="20dp"
            android:textSize="16dp"
            android:paddingVertical="15dp"
            app:cornerRadius="10dp"
            app:icon="@drawable/ic_car"
            app:iconGravity="textStart"
            app:iconSize="25dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_set_dest"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/button_current_ride"
            android:backgroundTint="@color/dark_blue"
            android:text="@string/set_destination"
            android:textColor="@color/white"
            android:textFontWeight="700"
            android:textAllCaps="false"
            app:iconTint="@color/white"
            android:layout_marginTop="10dp"
            android:textSize="16dp"
            android:paddingVertical="15dp"
            app:cornerRadius="10dp"
            app:icon="@drawable/ic_location_pin"
            app:iconGravity="textStart"
            app:iconSize="25dp"
            app:iconPadding="4dp"
            />
    </RelativeLayout>

    <com.google.android.material.bottomappbar.BottomAppBar
        android:id="@+id/bottomAppBarDriver"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="@color/white"
        app:contentInsetStart="0dp">

        <com.google.android.material.bottomnavigation.BottomNavigationView
            android:id="@id/bottomNavigationView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:labelVisibilityMode="labeled"
            app:menu="@menu/bottom_nav_menu"
            app:itemIconSize="30dp"
            app:itemIconTint="@color/bottom_nav_item"/>

    </com.google.android.material.bottomappbar.BottomAppBar>

</androidx.coordinatorlayout.widget.CoordinatorLayout>