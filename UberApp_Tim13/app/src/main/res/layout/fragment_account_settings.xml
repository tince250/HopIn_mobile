<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="20dp"
    android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:layout_marginTop="20dp"
            android:orientation="horizontal"
            android:paddingHorizontal="20sp">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/editProfilePictureBtn"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="85dp"
                    android:layout_marginEnd="4dp"
                    android:layout_marginBottom="4dp"
                    android:background="@drawable/edit_pic"

                    android:elevation="2dp"
                    android:padding="8dp"
                    android:src="@drawable/edit"
                    app:tint="@color/black" />

                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="6dp"
                    android:layout_marginEnd="20dp"
                    app:cardCornerRadius="70dp"
                    app:cardElevation="0dp">


                    <ImageView
                        android:id="@+id/driverAvatarSettingsImg"
                        android:layout_width="110dp"
                        android:layout_height="110dp"
                        android:layout_gravity="center"
                        android:scaleType="centerCrop"
                        android:src="@drawable/profile_pic" />


                </androidx.cardview.widget.CardView>


            </RelativeLayout>


            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:orientation="vertical">


                <EditText
                    android:id="@+id/nameSettingsET"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginStart="0dp"
                    android:background="@drawable/border_dark"
                    android:fontFamily="@font/poppinsbold"
                    android:inputType="textPersonName"
                    android:padding="10sp"
                    android:textSize="16sp" />


                <EditText
                    android:id="@+id/surnameSettingsET"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/border_dark"
                    android:fontFamily="@font/poppinsbold"
                    android:inputType="textPersonName"
                    android:padding="10sp"
                    android:text="@string/inputSurname"
                    android:textSize="16sp" />
            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="30dp"
            android:orientation="vertical">

            <EditText
                android:id="@+id/emailSettingsET"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp"
                android:background="@drawable/border_dark"
                android:fontFamily="@font/poppinsbold"
                android:inputType="textEmailAddress"
                android:padding="10sp"
                android:text="@string/inputEmail"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/citySettingsET"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp"
                android:background="@drawable/border_dark"
                android:fontFamily="@font/poppinsbold"
                android:inputType="text"
                android:padding="10sp"
                android:text="@string/inputCity"
                android:textSize="16sp" />

            <LinearLayout
                android:id="@+id/telephoneSettingsLL"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"

                android:layout_marginTop="20dp"
                android:orientation="horizontal"

                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <Spinner
                    android:id="@+id/spinnerAreaNumSettings"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:background="@drawable/border_dark"
                    android:backgroundTint="#D9D9D9"
                    android:fontFamily="@font/poppinsbold"
                    android:paddingHorizontal="10sp" />

                <EditText
                    android:id="@+id/phoneSettingsET"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_marginStart="40dp"
                    android:background="@drawable/border_dark"
                    android:fontFamily="@font/poppinsbold"
                    android:padding="10sp"
                    android:text="@string/inputPhone"
                    android:textSize="16sp" />
                />

            </LinearLayout>

            <EditText
                android:id="@+id/ccardSettingsET"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp"
                android:background="@drawable/border_dark"
                android:fontFamily="@font/poppinsbold"
                android:inputType="text"
                android:padding="10sp"
                android:text="@string/inputCCard"
                android:textSize="16sp"
                android:enabled="false"/>


            <com.google.android.material.button.MaterialButton
                android:id="@+id/changePasswordBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/ccardSettingsET"
                android:layout_marginTop="30dp"
                android:backgroundTint="@color/gray"
                android:fontFamily="@font/poppinsbold"
                android:onClick="switchToChangePassword"
                android:paddingVertical="8dp"
                android:text="@string/changePassword"
                android:textAllCaps="false"
                android:textColor="@color/black"
                android:textFontWeight="700"
                android:textSize="14sp"
                app:cornerRadius="10dp"
                app:icon="@drawable/key"
                app:iconGravity="textStart"
                app:iconSize="20dp"
                app:iconTint="@color/blue" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/changePayInfoBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/changePasswordBtn"
                android:layout_marginTop="5dp"
                android:backgroundTint="@color/gray"
                android:fontFamily="@font/poppinsbold"
                android:onClick="switchToPaymentInfo"
                android:paddingVertical="8dp"
                android:text="@string/changePaymentInfo"
                android:textAllCaps="false"
                android:textColor="@color/black"
                android:textFontWeight="700"
                android:textSize="14sp"
                app:cornerRadius="10dp"
                app:icon="@drawable/ccard"
                app:iconGravity="textStart"
                app:iconSize="20dp"
                app:iconTint="@color/blue" />


        </LinearLayout>

        <com.google.android.material.button.MaterialButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="35dp"
            android:backgroundTint="@color/solid_blue"
            android:fontFamily="@font/poppinsbold"
            android:paddingHorizontal="35dp"
            android:paddingVertical="10sp"
            android:text="@string/save"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="16sp"
            app:cornerRadius="10dp"
            android:textStyle="bold"/>

</LinearLayout>